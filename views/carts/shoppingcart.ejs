<% layout('layouts/boilerplate') %> 

<% if (Product) {%>
        <h1>Shopping Cart</h1>
        <br>
        <br>
        <h4 class="text-muted"><%= session.cart.totalQty %> Items in total</h4>
        <div class="row">
            <div class="col-md-8">
                <% for( let product of Product) { %>
                <hr class="mt-3">
                <div class="row mt-3">
                    <div class="col-6 col-xxl-3 col-xl-3 col-lg-3 col-md-6 col-sm-5">
                        <p class="badge bg-primary rounded-pill" id="shopingcartbadge"><%= product.qty %></p>
                        <img src="<%= product.item.images[0].url %>"  alt="" style="max-width: 150px;">
                    </div>
                    <div class="col-6 col-xxl-9 col-xl-9 col-lg-9 col-md-6 col-sm-7">
                        <div class="row">
                            <div class="col-xxl-10 col-xl-9 col-lg-9 col-md-12 col-sm-9">
                                <h5 class="card-title mb-2"><%= product.item.name %></h5>
                                <ul style="list-style-type: none;padding-left: 0rem;">
                                    <li style="line-height: 1rem;">
                                        <p class="card-subtitle mb-2 text-muted"><%= product.item.category %></p>
                                    </li>
                                    <li style="line-height: 1rem;">
                                        <p class="card-subtitle mb-2 text-muted"><%= product.item.weight %><i>g</i></p>
                                    </li>
                                    <li style="line-height: 1rem;">
                                        <p class="card-subtitle mb-2 text-muted"><%= product.item.brand %></p>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-12 col-sm-3">
                                <h4 class="label label-success"><%= product.item.price %> JD</h4>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-xxl-10 col-xl-9 col-lg-9 col-md-6 col-sm-8 col-xs-12 mb-3">
                                <a href="/reduce/<%= product.item._id%>"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-dash-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                                </svg></a>
                                <a href="/decrease/<%= product.item._id%>"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                </svg></a>
                            </div>
                            <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-6 col-sm-2 col-xs-6">
                                <a href="/remove/<%= product.item._id %>" class="btn btn-outline-primary rounded-pill">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                <hr>
            </div>
            <div class="col-md-4">
                <h5>Order summary</h5>
                <div class="row">
                    <div class="col-6 muted-text"><p>Products</p></div>
                    <div class="col-6 muted-text">JD <%= session.cart.totalPrice %></div>
                </div>
                <hr>
                <div class="row mb-3">
                    <div class="col-6"><h6>Subtotal incl. VAT</h6></div>
                    <div class="col-6"><h4>JD <%= session.cart.totalPrice %></h4></div>
                </div>

                <p style="font-size:12px;margin: 0.75rem 0;">By clicking "check out" you're agreeing to our Privacy Policy</p>
                <div>
                    <a href="/checkout" class="btn btn-primary d-grid gap-2 mx-auto <%=session.cart.totalQty === 0 ? 'disabled' : '' %>" role="button" aria-disabled="true" style="margin-bottom: 2.25rem; border-radius: 30px;">Checkout</a>
                </div>
                <p class="mt-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
                    <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                    <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                    </svg> 90 days to change your mind</p>
                <p class="mt-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield" viewBox="0 0 16 16">
                    <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z"/>
                    </svg> Secure shopping with SSL encryption</p>
            </div>         
        </div>



<% } else { %>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 ">
            <h4>Shopping cart is empty</h4>
        </div>
    </div>
<% } %> 
