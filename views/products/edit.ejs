<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1>Edit the Product</h1>
    <div class="col-6 offset-3 mt-5">
        <form action="/products/<%= product._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input class="form-control" type="text" name="product[name]" id="name" value="<%= product.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input class="form-control" type="number" name="product[price]" id="price" value="<%= product.price %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="weight" class="form-label">Weight</label>
                <input class="form-control" type="number" name="product[weight]" id="weight" value="<%= product.weight %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" type="text" name="product[description]" id="description" required><%= product.description %></textarea>
                <label for="description" class="form-label">Description</label>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input class="form-control" type="text" name="product[rating]" id="rating" value="<%= product.rating %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="brand">Select The Brand</label>
                <select class="form-select" name="product[brand]" id="brand">
                    <option value="Organic Farm"<%=product.brand ==='Organic Farm'?'selected':''%>>Organic Farm</option>
                    <option value="Fruits Market"<%=product.brand ==='Fruits Market'?'selected':''%>>Fruits Market</option>
                    <option value="Country Farm"<%=product.brand ==='Country Farm'?'selected':''%>>Country Farm</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Select Category</label>
                <select class="form-select" name="product[category]" id="category">
                    <option value="Fruit"<%=product.category ==='Fruit'?'selected':''%>>Fruit</option>
                    <option value="Vegetable"<%=product.category ==='Vegetable'?'selected':''%>>Vegetable</option>
                    <option value="Dairy"<%=product.category ==='Dairy'?'selected':''%>>Dairy</option>
                </select>
            </div>
            <button class="btn btn-success">Update</button>
            <a href="/products/<%= product._id %>" class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>
