                    </div>
                    <label for="image-<%=i%>">Delete</label>
                <% }) %> 
            </div>
            <div class="mb-3">
                <label for="weight" class="form-label">Weight</label>
                <input class="form-control" type="number" name="product[weight]" id="weight" value="<%= product.weight %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
