            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input class="form-control" type="text" name="product[name]" id="name" value="<%= product.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input class="form-control" type="number" name="product[price]" id="price" value="<%= product.price %>" required>
