<% layout('layouts/boilerplate') %> 
<%- include('../partials/carousel')  %> 


<a href="/products" class="removeUnderLine"><h2 class="shadow p-2 mb-3 bg-body rounded" style="text-align:center; margin-top: 20px;">Our Fresh Products</h2></a>

<div class="row">
    <% for( let product of products) {%>
        <div class="col-xxl-3 col-xl-4 col-lg-6 col-md-6 col-xs-12 mb-3 mt-3"><a href="/products/<%= product._id %> " class="removeUnderLine">
            <div class="card shadow p-3 mb-3 bg-body rounded" style="width: 18rem;">
                <img src="<%= product.images %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text muted-text" style="color:#ff7575;"><%= product.brand %></p>
                    <p class="card-text"><%= product.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><%= product.category%></li>
                    <li class="list-group-item"><%= product.price %>$ Per <%= product.weight %><em>g</em></li>
                    <li class="list-group-item">Rating: <%= product.rating %></li>
                </ul>
                <button class="btn btn-success mt-3">ADD TO BASKET</button>
            </div></a>
        </div>
    <%}%>
</div>