<% layout('layouts/boilerplate') %> 
<%- include('../partials/carousel')  %> 
<link rel="stylesheet" href="/stylesheet/stars.css">

<a href="#" class="removeUnderLine"><h2 class="shadow p-2 mb-3 bg-body rounded" style="text-align:center; margin-top: 20px;">Our Fresh Products</h2></a>

<div class="row">
    <% for( let product of products) {%>
        <div class="col-xxl-3 col-xl-4 col-lg-6 col-md-6 col-xs-12 mb-3 mt-3">
            <a href="/products/<%= product._id %> " class="removeUnderLine">
                <div class="card shadow p-3 mb-3 bg-body rounded">
                    <img src="<%= product.images[0].url %>" class="card-img-top" style="height: 200px;" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text muted-text" style="color:#ff7575;"><%= product.brand %></p>
                        <p class="card-text"><%= product.description %></p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= product.category%></li>
                        <li class="list-group-item"><h3><%= product.price %> $</h3></li>
                        <li class="list-group-item"><h6>Per <span style="color: red;"><%= product.weight %></span><i> g</i></h6></li>
                    </ul>
                    <div class="mt-3">
                        <p class="starability-result" data-rating="<%=product.rating %>">
                            Rated: <%=product.rating%>  
                        </p> 
                    </div>
                    <!-- <button class="btn btn-success mt-1">ADD TO BASKET</button> -->
                    <a href="/add-to-cart/<%= product._id %>" class="btn btn-primary" ><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg></a>
                </div>
            </a>
        </div>
    <%}%>
</div>