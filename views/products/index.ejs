<% layout('layouts/boilerplate') %> 
<%- include('../partials/carousel')  %> 
<link rel="stylesheet" href="/stylesheet/stars.css">

<a href="#" class="removeUnderLine"><h2 class="shadow p-2 mb-3 bg-body rounded" style="text-align:center; margin-top: 20px;">Our Fresh Products</h2></a>

<div class="row">
    <% for( let product of products) {%>
        <div class="col-xxl-3 col-xl-4 col-lg-6 col-md-6 col-xs-12 mb-3 mt-3">
            <a href="/products/<%= product._id %> " class="removeUnderLine">
                <div class="card shadow p-3 mb-3 bg-body rounded">
                    <img src="<%= product.images[0].url %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text muted-text" style="color:#ff7575;"><%= product.brand %></p>
                        <p class="card-text"><%= product.description %></p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= product.category%></li>
                        <li class="list-group-item"><h4><%= product.price %> $</h4> Per <span style="color: red;"><%= product.weight %></span><i> g</i></li>
                    </ul>
                    <div class="mt-3">
                        <p class="starability-result" data-rating="<%=product.rating %>">
                            Rated: <%=product.rating%>  
                        </p> 
                    </div>
                    <!-- <button class="btn btn-success mt-1">ADD TO BASKET</button> -->
                    <a href="/cart" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
                </div>
            </a>
        </div>
    <%}%>
</div>